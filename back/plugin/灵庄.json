{
    "default_cmd": "灵庄结算",
    "progress_profile": {
        "灵庄结算": {
            "type": "recv",
            "resp": [
                {
                    "resp": "结息",
                    "result": "成功,跳过阶段",
                    "progress": "灵石"
                }
            ]
        },
        "^灵石$": {
            "type": "recv",
            "resp": [
                {
                    "resp": "当前灵石",
                    "pre": {
                        "progress": {
                            "func_name": "deposit_or_not",
                            "args": {
                                "regex": "| (\\d+)"
                            }
                        }
                    }
                }
            ]
        },
        "灵庄存灵石": {
            "type": "recv",
            "resp": [
                {
                    "resp": "道友存入灵石",
                    "result": "成功,跳过阶段",
                    "next_type": "delay",
                    "next_duration": 5,
                    "next_unit": "min",
                    "progress": "灵庄结算"
                },
                {
                    "resp": "可以继续存",
                    "result": "失败,重新决定",
                    "pre": {
                        "progress": {
                            "func_name": "deposit_or_not",
                            "args": {
                                "regex": "可以继续存(\\d+)枚灵石"
                            }
                        }
                    }
                }
            ]
        }
    }
}
